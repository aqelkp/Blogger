<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.aqel.blogger.AboutAqelFragment"
    android:weightSum="1"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="7dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Vayanashala"
                    android:id="@+id/textView"
                    android:textColor="#777"
                    android:textStyle="bold|italic"
                    android:textSize="18dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_gravity="left" />
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view1"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    card_view:cardElevation="3dp"

                    android:background="@android:color/white"
                    >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:padding="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:text="Vaayanashala is an app to promote malayalam blogging and hence contribute to the growth of malayalam literature."
                        android:id="@+id/about_main_messsage"
                        android:padding="16dp"
                        android:layout_gravity="center"
                        android:singleLine="false"
                        android:fontFamily="sans-serif-light"
                        android:textSize="16dp"
                        android:textColor="#222"
                        />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#d3d7d9"
                        />

                    <LinearLayout
                        android:id="@+id/layout_rate_us"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:background="@drawable/rate_on_play_store_bg"
                        >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="fill_parent"
                            android:src="@drawable/googleplayicon"
                            android:layout_marginLeft="24dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="Rate us on Google Play"
                            android:textSize="14dp"
                            android:textColor="#555"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            />
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#d3d7d9"
                        />


                    <LinearLayout
                        android:id="@+id/contact_email_aqel"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:background="@drawable/rate_on_play_store_bg"
                        >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="fill_parent"
                            android:src="@drawable/gmail"
                            android:layout_marginLeft="24dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="Send feedback"
                            android:textSize="14dp"
                            android:paddingTop="12dp"
                            android:textColor="#555"
                            android:paddingBottom="12dp"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#d3d7d9"
                        />
                    <LinearLayout
                        android:id="@+id/contact_reprot_bug"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:background="@drawable/rate_on_play_store_bg"
                        >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="fill_parent"
                            android:src="@drawable/bug"
                            android:layout_marginLeft="24dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="Report a bug"
                            android:textSize="14dp"
                            android:textColor="#555"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            />
                    </LinearLayout>


                </LinearLayout>
                </android.support.v7.widget.CardView>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="7dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Developer"
                    android:textColor="#777"
                    android:textStyle="bold|italic"
                    android:textSize="18dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_gravity="left" />

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view21"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    card_view:cardElevation="3dp"

                    android:background="@android:color/white"
                    >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@android:color/white"
                    >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        >
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:padding="5dp">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:id="@+id/imageView"
                                android:background="@drawable/aql"
                                android:layout_gravity="center_vertical"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:paddingLeft="25dp"
                            android:paddingRight="25dp"
                            android:layout_gravity="center_vertical">




                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Aqel Ahammad"
                                android:id="@+id/tvBlogger"
                                android:maxLines="2"
                                android:textColor="@color/font_color"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#d3d7d9"
                        />

                    <LinearLayout
                        android:id="@+id/contact_facebook_aqel"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:background="@drawable/rate_on_play_store_bg"
                        >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="fill_parent"
                            android:src="@drawable/facebook"
                            android:layout_marginLeft="24dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="Facebook Aqel"
                            android:textSize="14dp"
                            android:textColor="#555"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            />
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#d3d7d9"
                        />


                    <LinearLayout
                        android:id="@+id/contact_email_aqel_a"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:background="@drawable/rate_on_play_store_bg"
                        >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="fill_parent"
                            android:src="@drawable/gmail"
                            android:layout_marginLeft="24dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="Mail Aqel"
                            android:textSize="14dp"
                            android:paddingTop="12dp"
                            android:textColor="#555"
                            android:paddingBottom="12dp"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            />
                    </LinearLayout>



                </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="7dp"
                android:id="@+id/linearLayout3"
                android:layout_gravity="center_horizontal|right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Designer"
                    android:textColor="#777"
                    android:textStyle="bold|italic"
                    android:textSize="18dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_gravity="left"
                    />
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view2"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    card_view:cardElevation="3dp"

                    android:background="@android:color/white"
                    >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:padding="8dp" >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff" >

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:padding="5dp" >

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:id="@+id/imageView2"
                                android:background="@drawable/jun"
                                android:layout_gravity="center_vertical" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:paddingLeft="25dp"
                            android:paddingRight="25dp"
                            android:layout_gravity="center_vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Junaid KT"
                                android:id="@+id/textView2"
                                android:maxLines="2"
                                android:textColor="@color/font_color"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#d3d7d9" />

                    <LinearLayout
                        android:id="@+id/contact_facebook_junaid"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:background="@drawable/rate_on_play_store_bg" >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="fill_parent"
                            android:src="@drawable/facebook"
                            android:layout_marginLeft="24dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="Facebook Junaid"
                            android:textSize="14dp"
                            android:textColor="#555"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#d3d7d9" />


                    <LinearLayout
                        android:id="@+id/contact_email_junaid"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:background="@drawable/rate_on_play_store_bg" >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="fill_parent"
                            android:src="@drawable/gmail"
                            android:layout_marginLeft="24dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="Mail Junaid"
                            android:textSize="14dp"
                            android:paddingTop="12dp"
                            android:textColor="#555"
                            android:paddingBottom="12dp"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp" />
                    </LinearLayout>
                </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    card_view:cardElevation="3dp"

                    android:background="@android:color/white"
                    >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"></LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:padding="5dp"
                    android:id="@+id/linearLayout16"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:text="Special thanks to Arun Padiyan for your valuable suggestions and help."
                        android:id="@+id/textView6"
                        android:padding="16dp"
                        android:layout_gravity="center"
                        android:singleLine="false"
                        android:fontFamily="sans-serif-light"
                        android:textSize="16dp"
                        android:textColor="#222" />

                </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    card_view:cardElevation="3dp"

                    android:background="@android:color/white"
                    >


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:onClick="onClick"
                        android:id="@+id/about_malayalm_bloggers"
                        >
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="15dp">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="80dp"
                                android:id="@+id/imageView32"
                                android:background="@drawable/malayalam_bloggers_group1"
                                android:layout_gravity="center_vertical"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#fff"
                                android:text="Special thanks to Malayalam Bloggers facebook group for supporting us. Click to know more about them."
                                android:padding="16dp"
                                android:layout_gravity="center"
                                android:singleLine="false"
                                android:fontFamily="sans-serif-light"
                                android:textSize="16dp"
                                android:textColor="#222"
                                />
                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="7dp"
                >

            </LinearLayout>


        </LinearLayout>

   </ScrollView>


</LinearLayout>
